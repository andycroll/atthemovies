<% content_for(:title) do -%>
  <%= @cinema.name %> &bull; Cinemas
<% end -%>

<% content_for :breadcrumbs do -%>
  <li><%= link_to 'Cinemas', cinemas_path %></li>
  <li class="active"><%= @cinema.name %></li>
<% end -%>

<% content_for(:page_header) do -%>
  <%= @cinema.name %>
<% end -%>

<div class="row">
  <div class="col-sm-12">
    <p>
      <%= @cinema.street_address %>,
      <%= @cinema.locality %>
      <%= @cinema.postal_code %><br />
      <small><%= link_to @cinema.screenings_url, @cinema.screenings_url %></small>
    </p>
  </div>
</div>

<h3>Screenings Today</h3>
<hr />

<div class="row">
  <%= render partial: 'screenings/screening', collection: @cinema.screenings.on(Time.current) -%>
</div>

<h3><%= link_to 'More Screenings', cinema_screenings_path(@cinema) %></h3>
