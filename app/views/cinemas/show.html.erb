<% content_for(:title) do -%>
  <%= @cinema.name %> &bull; Cinemas
<% end -%>

<% content_for :breadcrumbs do -%>
  <li><%= link_to 'Cinemas', cinemas_path %></li>
  <li class="active"><%= @cinema.name %></li>
<% end -%>

<% content_for(:page_header) do -%>
  <%= @cinema.name %>
<% end -%>

<div class="row">
  <div class="col-sm-12">
    <p>
      <%= @cinema.street_address %>,
      <%= @cinema.locality %>
      <%= @cinema.postal_code %>
    </p>
  </div>
</div>

<h3>Screenings Today â€¢ <%= link_to 'All Screenings', cinema_screenings_path(@cinema) %></h3>
<hr />

<div class="row">
  <% @cinema.screenings.on(Time.current).each do |screening| -%>
    <div class="col-sm-4 col-md-3" data-screening-id="<%= screening.id %>">
      <div class="media">
        <div class="pull-left" style="width: 80px; margin-right: 20px;">
          <%= image_tag poster_uri(screening.film), alt: screening.film.name, class: 'media-object img-responsive' %>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
            <small><%= local_time(screening.showing_at, '%H:%M') %></small><br />
            <%= screening.film.name %>
          </h4>
        </div>
      </div>
    </div>
  <% end -%>
</div>
