<%- title = "Screenings at #{@cinema.name}" %>

<% content_for(:title) do -%>
  <%= title %>
<% end -%>

<% content_for :breadcrumbs do -%>
  <li><%= link_to 'Cinemas', cinemas_path %></li>
  <li><%= link_to @cinema.name, @cinema %></li>
  <li class="active">Screenings</li>
<% end -%>

<% content_for(:page_header) do -%>
  <%= title %>
  <hr />
<% end -%>

<% @screenings.dates.each do |date| -%>
  <h2><%= local_time(date, '%A %B %e') %></h2>
  <div class="row">
    <%= render partial: 'screening', collection: @screenings.on(date) -%>
  </div>
<% end -%>
